<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="com.ithiredguns.orlandocodecamp.OtherSponsorsPage" xmlns:views="clr-namespace:com.ithiredguns.orlandocodecamp" Title="Other Sponsors">
	<ListView x:Name="lstSponsorDetails" HasUnevenRows="true" SeparatorVisibility="None" ItemTapped="Handle_ItemTapped">
		<ListView.Header>
			<StackLayout x:Name="OtherSponsorsBanner" Style="{StaticResource OtherSponsorsBannerStyle}" Padding="0,10,0,0">
				<Label FontSize="20" Text="Thanks to all our sponsors" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontAttributes="Bold" />
				<Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="14" Text="Interested in sponsoring CodeCamp?" />
				<Label x:Name="lblSponsorPage" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="Check out our sponsor package" TextColor="Blue" FontSize="15" FontAttributes="Bold">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped" />
					</Label.GestureRecognizers>
				</Label>
			</StackLayout>
		</ListView.Header>
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<views:SponsorItemTemplate />
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>